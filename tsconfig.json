{
  "compilerOptions": {
    "target": "ES2020",           // or ES2017/ES2015 minimum
    "module": "commonjs",
    "outDir": "./server",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,      // important for default import like express
    "resolveJsonModule": true,    // important for importing JSON
    "moduleResolution": "node",
    "skipLibCheck": true          // skips type errors in node_modules
  },
  "include": ["src"]
}

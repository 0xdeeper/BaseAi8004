{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],

    "module": "Node16",
    "moduleResolution": "Node16",

    "rootDir": "./src",
    "outDir": "./server",

    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "types": ["node"],
    "ignoreDeprecations": "5.0"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "clean-chain",
    "blockchain",
    "agent-server",
    "client"
  ]
}
